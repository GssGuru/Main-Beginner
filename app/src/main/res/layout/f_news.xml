<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamestudiostandart.news.fragments.NewsListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/layout_news_animation"
        android:overScrollMode="never"
        android:paddingBottom="120dp" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/img_shadow"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/fl_items_not_found"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal|top"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_items_not_found"
            tools:ignore="ContentDescription" />

        <TextView
            android:textColor="@color/colorTextLight"
            android:textSize="21sp"
            android:text="@string/text_items_not_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
